/**index.wxss**/
/* 用户头像&昵称 */
.userinfo {
  display: flex;
  height: 350rpx;
  flex-direction: column;
  align-items: center;
  color: #ffffff;
  background:-webkit-gradient(linear, 0% 0%, 0% 100%,from(#0087a9), to(rgba(0, 135, 169, 0.5)));
}  
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
/* setting信息栏 */
.setting_info{
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction:row;
  background-color: #ffffff;
}
.setting_infotext{
  width: 35%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.setting_infoblank{
  width:30%;
}
/* setting选项栏 */
.repeat{
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.select{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
}
.haveselect{
  background-color: #dddddd;
}