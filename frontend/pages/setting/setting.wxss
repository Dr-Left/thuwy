/**index.wxss**/
/* 用户头像&昵称 */
.userinfo {
  height: 350rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #ffffff;
}
.userinfo::after{
  content: '';  
  width: 140%;
  height: 375rpx;
  position: absolute;
  z-index: -1;
  left: -20%;
  top: 0;
  border-radius: 0 0 50% 50%;
  background: linear-gradient(0, rgba(0, 135, 169, 0.5),#0087a9);
}
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 3px solid #660874;
}

/* setting信息栏 */
.setting_info {
  width: 90%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
}

.setting_infotext {
  width: 35%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.setting_infoblank {
  width: 30%;
}

/* setting选项栏 */
.repeat {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.select {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
}

.haveselect {
  background-color: #dddddd;
}

/* 版本号 */
.version {
  bottom: 10rpx;
  width: 100%;
  position: fixed;
  color: #999999;
  font-size: small;
  font-weight: inherit;
  text-align: center;
}