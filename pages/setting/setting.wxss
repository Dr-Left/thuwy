/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.option{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction:row;
  border: 1px solid #ddd;
  background-color: #eee;
}

.optiontext{
  width: 35%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.optionblank{
  width:30%;
}

.select{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #ddd;
  background-color: #eee;
}

.haveselect{
  background-color: #ccc;
}